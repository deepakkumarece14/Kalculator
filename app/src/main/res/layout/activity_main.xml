<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calcScreenExp"
        android:text="@string/zero"
        android:scrollbars="horizontal"
        tools:text="1000+452"
        style="@style/TextViewStyle"/>

    <TextView
        android:id="@+id/calcScreenResult"
        tools:text="1452"
        style="@style/TextViewStyle" />

    <LinearLayout style="@style/LinearLayoutStyle">
        <Button
            android:id="@+id/btnClear"
            android:text="@string/clear_btn"
            android:textColor="@color/colorBtnEqual"
            android:background="@drawable/btn_background"
            style="@style/ButtonStyle" />
        <ImageButton
            android:id="@+id/btnDelete"
            android:src="@drawable/ic_backspace"
            android:contentDescription="@string/back_btn"
            android:background="@drawable/btn_background"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/btnSignChange"
            android:text="@string/btn_sign_change"
            android:textColor="@color/colorBtnEqual"
            android:background="@drawable/btn_background"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/btnDivide"
            android:text="@string/divide_btn"
            android:background="@drawable/btn_background"
            style="@style/OperatorBtnStyle" />
    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutStyle">
        <Button
            android:id="@+id/btn7"
            android:text="@string/seven_btn"
            android:background="@drawable/btn_background"
            style="@style/NumberBtnStyle"/>
        <Button
            android:id="@+id/btn8"
            android:text="@string/eight_btn"
            android:background="@drawable/btn_background"
            style="@style/NumberBtnStyle"/>
        <Button
            android:id="@+id/btn9"
            android:text="@string/nine_btn"
            android:background="@drawable/btn_background"
            style="@style/NumberBtnStyle" />
        <Button
            android:id="@+id/btnMul"
            android:text="@string/mul_btn"
            android:background="@drawable/btn_background"
            style="@style/OperatorBtnStyle"/>
    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutStyle">
        <Button
            android:id="@+id/btn4"
            android:text="@string/four_btn"
            android:background="@drawable/btn_background"
            style="@style/NumberBtnStyle"/>
        <Button
            android:id="@+id/btn5"
            android:text="@string/five_btn"
            android:background="@drawable/btn_background"
            style="@style/NumberBtnStyle"/>
        <Button
            android:id="@+id/btn6"
            android:text="@string/six_btn"
            android:background="@drawable/btn_background"
            style="@style/NumberBtnStyle"/>
        <Button
            android:id="@+id/btnPlus"
            android:text="@string/plus_btn"
            android:background="@drawable/btn_background"
            style="@style/OperatorBtnStyle"/>
    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutStyle">
        <Button
            android:id="@+id/btn1"
            android:text="@string/one_btn"
            android:background="@drawable/btn_background"
            style="@style/NumberBtnStyle"/>
        <Button
            android:id="@+id/btn2"
            android:text="@string/two_btn"
            android:background="@drawable/btn_background"
            style="@style/NumberBtnStyle"/>
        <Button
            android:id="@+id/btn3"
            android:text="@string/three_btn"
            android:background="@drawable/btn_background"
            style="@style/NumberBtnStyle"/>
        <Button
            android:id="@+id/btnMinus"
            android:text="@string/minus_btn"
            android:background="@drawable/btn_background"
            style="@style/OperatorBtnStyle"/>
    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutStyle">
        <Button
            android:id="@+id/btnPoint"
            android:text="@string/point_btn"
            android:background="@drawable/btn_background"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/btn0"
            android:text="@string/zero_btn"
            android:background="@drawable/btn_background"
            style="@style/NumberBtnStyle"/>
        <Button
            android:id="@+id/btnEqual"
            style="@style/ButtonStyle"
            android:layout_weight="2"
            android:background="@drawable/btn_colored_background"
            android:text="@string/equal_btn" />
    </LinearLayout>

</LinearLayout>